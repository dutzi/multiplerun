#!/usr/bin/env node
const fs = require('fs');
const path = require('path');
const multiplerun = require('../index');

const packageJsonPath = path.join(process.cwd(), 'package.json');

if (!fs.existsSync(packageJsonPath)) {
  throw new Error(`ðŸ’€ Undefined "${packageJsonPath}" file.`);
}

const {multiplerun: config} = JSON.parse(fs.readFileSync(packageJsonPath, {encoding: 'utf8'}));

if (!config) {
  throw new Error(`ðŸ’€ Undefined "multiplerun" option in "${packageJsonPath}" file.`);
} else if (!config[process.argv[2]]) {
  throw new Error(`ðŸ’€ Undefined "${process.argv[0]}" layout in multiplerun config.`);
}

multiplerun(config[process.argv[2]], process.cwd());
